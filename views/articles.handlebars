<div class="container">

    <div class="row">
        <div class="col-9">
            <ul class="list-group">
                {{#each data}}
                    <li class="list-group-item allArticles">
                        <h3 class="article">{{title}}</h3>
                        <br> 
                        <a href={{link}} target="_blank"><button class="btn btn-primary">View Article</button></a>
                        <button class="btn btn-info" id={{id}}>Comment</button>
                    </li>
                {{/each}}
            </ul>
        </div>
        <div class="col-3" id="comment">
        </div>
    </div>
</div>